<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="motorcycle_action" model="ir.actions.act_window">
        <field name="name"> Motorcycle Registry </field>
        <field name="res_model">motorcycle.registry</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to add a new motorcycle
            </p>
        </field>
    </record>
    <menuitem
        id="motorcycle_menu"
        name="Motorcycle Registry"
        sequence="1"
        web_icon="motorcycle_registry,static/img/icon.png"
    >
        <menuitem
            id="menu_motorcycle_sub"
            name="Motorcycle Registry"
            sequence="1"
        >
            <menuitem
                id="menu_motorcycle_registry"
                name="Registry"
                action="motorcycle_action"
                sequence="2"
            />
        </menuitem>
    </menuitem>
</odoo>